{
    "update.enableWindowsBackgroundUpdates": false,
    "update.mode": "none",
    "update.showReleaseNotes": false,
    "telemetry.telemetryLevel": "off",
    "workbench.colorTheme": "Monokai",
    /* css格式化 */
    "beautify.config": {
        "brace_style": "collapse,preserve-inline",
        "indent_size": 4
    },
    // 搜索过滤
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/dist": true,
        "/lib": true
    },
    /* eslint */
    // "eslint.run": "onSave",
    // 要格式化的文件类型
    "eslint.validate": [
        "typescript",
        "typescriptreact",
        "javascript",
        "tsx"
    ],
    "commentTranslate.source": "Bing",
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    // 在.js中，写div按下tab就可以自动补全，而不需要写<div再补全
    "emmet.includeLanguages": {
        "javascript": "javascriptreact"
    },
    "bracket-pair-colorizer-2.depreciation-notice": false,
    "editor.renderWhitespace": "all",
    "workbench.editor.untitled.hint": "hidden",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.unicodeHighlight.includeComments": false,
    "merge-conflict.diffViewPosition": "Below",
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.accessibilitySupport": "off",
    "editor.fontSize": 13,
    "editor.wordWrap": "on",
    "debug.console.wordWrap": false,
    "notebook.output.wordWrap": true,
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[css]": {
        "editor.defaultFormatter": "stylelint.vscode-stylelint"
    },
    "terminal.integrated.altClickMovesCursor": false,
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "commentTranslate.hover.string": true,
    "commentTranslate.hover.variable": true,
    "commentTranslate.hover.content": true,
    "commentTranslate.targetLanguage": "zh-CN",
    "commentTranslate.maxTranslationLength": 10000,
    "commentTranslate.ignore": [
        {
            "languageId": "javascript,typescript,javascriptreact,typescriptreact",
            "regular": "[\\*\\s]+"
        },
        {
            "languageId": "dart",
            "regular": "[\\s|/]+"
        }
    ],
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    }
}