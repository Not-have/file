{
    "update.mode": "none",
    "update.showReleaseNotes": false,
    "telemetry.telemetryLevel": "off",
    "workbench.colorTheme": "Monokai",
    // 搜索过滤
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/dist": true,
        "/lib": true
    },
    /* eslint */
    // "eslint.run": "onSave",
    // 要格式化的文件类型
    "eslint.validate": [
        "typescript",
        "typescriptreact",
        "javascript",
        "tsx"
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": false
    },
    // 在.js中，写div按下tab就可以自动补全，而不需要写<div再补全
    "emmet.includeLanguages": {
        "javascript": "javascriptreact"
    },
    "editor.renderWhitespace": "all",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.unicodeHighlight.includeComments": false,
    "editor.fontSize": 16,
    "window.zoomLevel": -1.2, // 侧边栏字体大小
    "git.confirmSync": false,
    "terminal.integrated.env.osx": {
        "FIG_NEW_SESSION": "1"
    },
    "editor.accessibilitySupport": "off",
    "editor.formatOnType": true,
    "javascript.format.placeOpenBraceOnNewLineForControlBlocks": true,
    "typescript.format.placeOpenBraceOnNewLineForControlBlocks": true,
    "editor.wordWrap": "on",
    "debug.console.wordWrap": false,
    "notebook.output.wordWrap": true,
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "workbench.iconTheme": "material-icon-theme",
    "[css]": {
        "editor.defaultFormatter": "stylelint.vscode-stylelint"
    },
    "varTranslation.translationEngine": "baidu",
    "varTranslation.baiduSecret": "20210204000690101,NXbR83r4AT_21sVZ7KDV",
    "editor.detectIndentation": false,
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "terminal.integrated.altClickMovesCursor": false,
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "prettier.tabWidth": 4,
    "editor.rulers": [],
    "debug.showInStatusBar": "always",
    "problems.showCurrentInStatus": true,
    "editor.suggest.showStatusBar": true,
    "commentTranslate.hover.string": true,
    "commentTranslate.hover.variable": true,
    "commentTranslate.hover.content": true,
    "commentTranslate.targetLanguage": "zh-CN",
    "commentTranslate.maxTranslationLength": 10000,
    "commentTranslate.ignore": [
        {
            "languageId": "javascript,typescript,javascriptreact,typescriptreact",
            "regular": "[\\*\\s]+"
        },
        {
            "languageId": "dart",
            "regular": "[\\s|/]+"
        }
    ],
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    // 同步时 忽略的插件
    "settingsSync.ignoredExtensions": [],
    "update.enableWindowsBackgroundUpdates": false,
    "projectManager.sortList": "Recent"
}