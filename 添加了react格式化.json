{
	"workbench.colorTheme": "Monokai",
	"files.associations": {
		"*.js": "javascript"
	},
	"editor.fontSize": 14,
	"editor.tabSize": 4,
	"files.exclude": {
		"**/.DS_Store": false,
		"**/.hg": false,
		"**/CVS": false
	},
	"editor.wordWrap": "on",
	"eslint.validate": [],
	// 保存后，根据eslint格式化
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true
	},
	"update.mode": "none",
	"commentTranslate.targetLanguage": "zh-CN",
	"commentTranslate.hover.enabled": true,
	"[html]": {
		"editor.defaultFormatter": "vscode.html-language-features"
	},
	"[javascript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	"[json]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	"editor.scrollbar.horizontalScrollbarSize": 10,
	"editor.scrollbar.verticalScrollbarSize": 12,
	"terminal.integrated.defaultProfile.windows": "Command Prompt",
	"[css]": {
		"editor.defaultFormatter": "HookyQR.beautify"
	},
	"beautify.config": {
		"brace_style": "collapse,preserve-inline",
		"indent_size": 4
	},
	"tabnine.experimentalAutoImports": true,
	"commentTranslate.hover.string": true,
	"commentTranslate.hover.variable": true,
	"commentTranslate.multiLineMerge": true,
	"commentTranslate.source": "Baidu",
	"commentTranslate.translationAli.accessKeyId": "20210204000690101",
	"commentTranslate.translationAli.accessKeySecret": "l64kNdKTPhXAgugTQIGQ",
	"bracket-pair-colorizer-2.depreciation-notice": false,
	"varTranslation.translationEngine": "bing",
	"translation.baidu.appId": "20210204000690101",
	"translation.baidu.appKey": "l64kNdKTPhXAgugTQIGQ",
	"editor.insertSpaces": false,
	// 下面的是  react的配置
	"eslint.run": "onType",
	"eslint.options": {
		"extensions": [
			".js",
			".vue",
			".jsx",
			".tsx"
		]
	},
	// 编辑器设置 - 保存时做格式化
	"editor.formatOnSave": true,
	// 编辑器设置 - 默认采用prettier-now做格式化
	// 如果使用的是prettier，这的设置应该是 esbenp.prettier-vscode
	// "editor.defaultFormatter": "remimarsal.prettier-now",
	// 控制缩进(安装插件 Prettier Now)
	"prettier.useTabs": true, // 缩进不使用tab，使用空格 
	"prettier.tabWidth": 4, // 缩进字节数
	// 函数声明时小括号前后要加空格
	// 如果你使用prettier这一项是不能做选择的，导致和eslint默认配置的冲突
	// 可以在百度中搜到很多的记录： https://www.baidu.com/s?wd=prettier%20%E5%87%BD%E6%95%B0%E7%A9%BA%E6%A0%BC
	"prettier.spaceBeforeFunctionParen": true,
	// react的jsx让>与结束标签同行
	"prettier.jsxBracketSameLine": true,
	"prettier.bracketSpacing": false, // 去掉数组内部前后的空格
	"prettier.semi": false, // 不要给语句加;
	"prettier.singleQuote": true, // 采用单引号
	"prettier.trailingComma": "none", // 不要尾随逗号,
	"prettier.printWidth": 80, // 每行超过80列就换行
	// 在.js中，写div按下tab就可以自动补全，而不需要写<div再补全
	// "emmet.includeLanguages": {
	// 	"javascript": "javascriptreact"
	// },
	"[typescriptreact]": {
		"editor.defaultFormatter": "remimarsal.prettier-now"
	}
}